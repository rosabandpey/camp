<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">


    <data>
        <variable
            name="CampProfileViewModel"
            type="com.rosa.camp.viewModel.CampViewModel" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="25"
        app:orientation="horizontal">



        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PersonalInfo"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_columnSpan="4"
            app:layout_gravity="center_horizontal"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="1"
            android:src="@drawable/iconcamping12"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            app:layout_column="1"
            app:layout_row="1"
            style="@style/personalInfo"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@={CampProfileViewModel.campName}"
            app:layout_column="0"
            app:layout_gravity="right"
            android:inputType="text"
            app:layout_row="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_columnSpan="4"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آدرس"
            app:layout_column="1"
            app:layout_row="3"
            style="@style/personalInfo"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@={CampProfileViewModel.campAddress}"
            app:layout_column="0"
            app:layout_gravity="right"
            android:inputType="text"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/home2" />

        <Button
            app:layout_row="3"
            android:id="@+id/addressButton"
            app:layout_column="3"
            app:layout_gravity="center_horizontal"
            android:text="آدرس از روی نقشه"
            android:onClick="@{(v)-> CampProfileViewModel.selectAddress(v)}"
            >
        </Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="4"
            app:layout_columnSpan="4"
            />



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="5"
            android:text="@string/tel"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="5"
            style="@style/personalInfo"
            app:layout_gravity="right"
            android:inputType="number"
            android:text="@={CampProfileViewModel.campTell}"
            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="5"
            app:srcCompat="@drawable/phone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="6"
            app:layout_columnSpan="4"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="توضیحات"
            app:layout_column="1"
            app:layout_row="7"
            style="@style/personalInfo"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="7"
            style="@style/personalInfo"
            app:layout_gravity="right"
            android:inputType="text"
            android:text="@={CampProfileViewModel.campDescription}"
            />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="7"
            app:srcCompat="@drawable/description1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="8"
            app:layout_columnSpan="4"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="9"
            android:text="شهر"
            style="@style/personalInfo"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            app:layout_column="0"
            app:layout_row="9"
            app:layout_gravity="right"

            android:text="@={CampProfileViewModel.campCity}"
            />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="9"
            app:srcCompat="@drawable/city" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="10"
            app:layout_columnSpan="4"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="11"
            android:text="قیمت"
            style="@style/personalInfo"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="11"
            app:layout_gravity="right"
            android:inputType="textEmailAddress"
            android:text="@={CampProfileViewModel.campCost}"
            />
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="11"
            app:srcCompat="@drawable/price" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="12"
            app:layout_columnSpan="4"
            />




        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radioButtonParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{CampProfileViewModel.campParking}"
            app:layout_column="0"
            app:layout_gravity="right"
            app:layout_row="13" />

        <ImageView
            android:id="@+id/imageViewparking"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="1"
            app:layout_row="13"
            app:srcCompat="@drawable/parking" />





        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radioButtonBath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{CampProfileViewModel.campShowers}"
            app:layout_column="2"
            app:layout_row="13"
            app:layout_gravity="right"

            />
        <ImageView
            android:id="@+id/imageViewBath"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="3"
            app:layout_row="13"
            app:srcCompat="@drawable/shower" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="14"
            app:layout_columnSpan="4"
            />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radioButtonRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{CampProfileViewModel.campResturant}"
            app:layout_column="0"
            app:layout_row="15"
            app:layout_gravity="right"

            />
        <ImageView
            android:id="@+id/imageViewRestaurant"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="1"
            app:layout_row="15"
            app:srcCompat="@drawable/plate" />





        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radioButtonwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{CampProfileViewModel.campWc}"
            app:layout_column="2"
            app:layout_row="15"
            app:layout_gravity="right"

            />
        <ImageView
            android:id="@+id/imageViewwc"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="3"
            app:layout_row="15"
            app:srcCompat="@drawable/wc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="16"
            app:layout_columnSpan="4"
            />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radioButtonInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="17"
            app:layout_gravity="right"
            android:checked="@{CampProfileViewModel.campWifi}"

            />


        <ImageView
            android:id="@+id/imageViewInternet"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="1"
            app:layout_row="17"
            app:srcCompat="@drawable/wifi" />

        <ImageView
            android:id="@+id/imageViewCamp"
            android:layout_width="50dp"
            android:layout_height="62dp"
            app:layout_column="2"
            app:layout_row="17"
            android:src="@{CampProfileViewModel.campimg}"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            app:layout_row="18"
            app:layout_columnSpan="4"
            />

        <Button
            app:layout_row="19"
            android:id="@+id/saveButton"
            app:layout_gravity="center_horizontal"
            android:text="@string/save"
            android:onClick="@{(v)-> CampProfileViewModel.saveButton(v)}"
            >
        </Button>


        <Button
            app:layout_row="19"
            android:id="@+id/imageButton"
            app:layout_gravity="center_horizontal"
            android:text="انتخاب تصاویر"
            android:onClick="@{(v)-> CampProfileViewModel.imageSelectButton(v)}"
            >
        </Button>


    </androidx.gridlayout.widget.GridLayout>

    </ScrollView>



</layout>

